<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="12dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginBottom="10dp"
    android:outlineAmbientShadowColor="@color/colorPrimary_"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="7dp"
    card_view:cardBackgroundColor="@color/colorGreyLight">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:minHeight="70dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_medium"
            android:maxWidth="200dp"

            android:text="@string/u_canteen_1"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:typeface="normal"
            android:visibility="visible"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/delete_cart_item"
            android:layout_width="56dp"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toEndOf="@+id/cart_item_name"
            card_view:layout_constraintTop_toTopOf="parent"
            style="@style/SelectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_remove_shopping_cart_black_24dp" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="@color/priceText"
            android:textSize="17sp"
            android:textStyle="italic"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/delete_cart_item"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toEndOf="@+id/cart_item_name"
            card_view:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>